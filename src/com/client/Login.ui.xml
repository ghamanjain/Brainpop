<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	Body{
	Background:url(https://www.roctechnologies.com/wp-content/uploads/2018/07/notebook-1280538_1920.jpg);
	background-size:100%;
	background-position:center;
	
   
	}
	.panel{
 background: url("http://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
 background-size: 100%;
 padding: 0px !important;
 padding-top: 40% !important;
 }
 .fieldPanel{
 background: white;
 padding: 6%;
 }
 .imgProfile{
 margin-top: -120px;
 width: 30%;
 margin-left: 30%;
 border: 5px solid #fff;
 }
 .rowAction{
 margin-top: 20px;
 }
 .login_demo{
 padding: 5%;
 }
	
	</ui:style>
	<g:HTMLPanel>
	 <m:MaterialRow addStyleNames="{style.login_demo}">
  <m:MaterialColumn grid="s12 m8 l6" offset="l3" >
   <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
    <m:MaterialPanel addStyleNames="{style.fieldPanel}">
     <m:MaterialImage url="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/1024px-User_icon_2.svg.png"  type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1"/>
     <m:MaterialTextBox type="EMAIL" placeholder="Email" ui:field="t1"/>
     <m:MaterialTextBox type="PASSWORD" placeholder="Password" ui:field="t2" />
     <m:MaterialButton ui:field="b1" backgroundColor="BLUE" waves="LIGHT" text="As Teacher" width="100%" />
     
     <m:MaterialRow addStyleNames="{style.rowAction}">
      
       <m:MaterialButton ui:field="b2" backgroundColor="BLUE" waves="LIGHT" text="As Student" width="100%" />
     
     </m:MaterialRow>
    </m:MaterialPanel>
   </m:MaterialPanel>
  </m:MaterialColumn>
 </m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 