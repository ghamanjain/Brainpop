<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:ma="urn:import:gwt.material.design.addins.client"
>
  
    
    <m:MaterialPanel>
        <m:MaterialHeader ui:field="header">
            <m:MaterialNavBar layoutPosition="FIXED" ui:field="navBar" activates="sidenavNavShrink" backgroundColor="BLUE" shadow="1">
              
                <m:MaterialNavBrand fontSize="2.2em" paddingLeft="60" text="BrainPop" />
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialLink iconType="ACCOUNT_CIRCLE" iconPosition="LEFT" text="Login" textColor="WHITE" waves="LIGHT" ui:field="t1" />
                    <m:MaterialLink iconType="ACCOUNT_CIRCLE" iconPosition="LEFT" text="Register" textColor="WHITE" waves="LIGHT" ui:field="t2" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <m:MaterialSideNavDrawer m:id="sidenavNavShrink" ui:field="sideNav" width="300">
            <m:MaterialNavBrand text="BrainPop" />
           
             <m:MaterialLink iconType="FACE" text="About">
               
            </m:MaterialLink>
            <m:MaterialLink iconType="CONTACTS" text="Contact us "/>
            <m:MaterialLink iconType="HELP" text="Help"/>
            <m:MaterialLink iconType="MODE_EDIT" text="Terms and conditions"/>
           
         
        </m:MaterialSideNavDrawer>
                  <m:MaterialContainer  paddingTop="55">
            <m:MaterialRow width="100%" paddingTop="10">
             <m:MaterialImage width="100%" url="http://www.nexttyari.com/wp-content/uploads/2019/03/elearning-app-development.png" />
            </m:MaterialRow>
            <m:MaterialFAB ui:field="fab">
                <m:MaterialButton type="FLOATING" href="https://github.com/GwtMaterialDesign/gwt-material-patterns/blob/release_2.0/src/main/java/com/github/gwtmaterialdesign/client/application/sidenavcard/CardSideNavView.ui.xml" target="_blank" backgroundColor="PINK" size="LARGE" iconType="CODE" />
            </m:MaterialFAB>
        </m:MaterialContainer>
       
    </m:MaterialPanel>
</ui:UiBinder>

